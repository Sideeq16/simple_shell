#include <string.h>

char *my_strtok(char *input_str, const char *separator)
{
    static char *remaining_str = NULL;
    if (input_str != NULL) {
        remaining_str = input_str;
    }

    if (remaining_str == NULL) {
        return NULL;
    }

    char *current_token = remaining_str;
    while (*remaining_str != '\0') {
        if (strchr(separator, *remaining_str) != NULL) {
            *remaining_str = '\0';
            remaining_str++;
            break;
        }
        remaining_str++;
    }

    if (*current_token == '\0') {
        current_token = NULL;
    }

    return current_token;
}
